@{
    Layout = null;
}
<link href="~/Content/css/Login.css" rel="stylesheet" />
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link href="~/Content/css/Login.css" rel="stylesheet" />

<body>
    <div class="sidenav">
        <div class="login-main-text">
            <h2>Aplicacion<br> Pagina de registro</h2>
            <p>Login or register from here to access.</p>
        </div>
    </div>
    <div class="main">
        <div class="col-md-6 col-sm-12">
            <div class="login-form">
                <form action="@Url.Action("SignUp","Logeo")" method="post">
                    <div class="form-group">
                        <label>Correo</label>
                        <input type="text" name="Mail" class="form-control" placeholder="Correo">
                    </div>
                    <div class="form-group">
                        <label>Contraseña</label>
                        <input type="password" name="Contrasenia" class="form-control" placeholder="Contraseña">
                    </div>
                    <div class="form-group">
                        <label>Confirmar Contraseña</label>
                        <input type="password" name="ConfirmarContrasenia" class="form-control" placeholder="Confirmar Contraseña">
                    </div>
                    @if (ViewData["Mensaje"] != null)
            {
<div class="alert alert-danger" role="alert">
   @ViewData["Mensaje"]
</div>
            }
                    
                    <button type="submit" class="btn btn-black">Registrarse</button>
                    <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Login","Logeo")'">Iniciar Sesion</button>
                </form>
            </div>
        </div>
    </div>
</body>
