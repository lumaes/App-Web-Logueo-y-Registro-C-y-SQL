
@{
    Layout = null;
}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link href="~/Content/css/Login.css" rel="stylesheet" />
<!------ Include the above in your HEAD tag ---------->

<div class="sidenav">
    <div class="login-main-text">
        <h2 class="body-content">Aplicacion<br>Pagina de Inicio</h2>
        <p>Inicia sesion o registrate para acceder.</p>
    </div>
</div>
<div class="main">
    <div class="col-md-6 col-sm-12">
        <div class="login-form">
            <form action="@Url.Action("Login","Logeo")" method="post">
                <div class="form-group">
                    <label>Correo</label>
                    <input type="text" name="Mail" class="form-control" placeholder="Correo">
                </div>
                <div class="form-group">
                    <label>Contraseña</label>
                    <input type="password" name="Contrasenia" class="form-control" placeholder="Contraseña">
                </div>
                @if (ViewData["Mensaje"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewData["Mensaje"]
                    </div>
                }
                <button type="submit" class="btn btn-black">Login</button>
                <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("SignUp","Logeo")'">Register</button>
            </form>
        </div>
    </div>
</div>



